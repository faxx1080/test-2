{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1.0.8": {},
    "ghcr.io/devcontainers/features/sshd:1": {}
  },
  "forwardPorts": [6080, 5901],
	"portsAttributes": {
